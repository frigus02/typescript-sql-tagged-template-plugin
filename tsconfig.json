{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"sourceMap": true,
		"declaration": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"exclude": [
		"build",
		"node_modules",
		"test-project",
		"**/*.test.ts",
		"**/__testproject__"
	]
}
